<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        
        <restConfiguration apiContextPath="api-docs" bindingMode="auto"
            component="undertow" contextPath="/myservice"
            enableCORS="true" port="8080">
            <apiProperty key="cors" value="true"/>
            <apiProperty key="api.title" value="Summit all resturant locations"/>
            <apiProperty key="api.version" value="1.0.0"/>
        </restConfiguration>
        
        <rest path="/resturant">
            <get uri="all">
                <description> All Resturant Info</description>
                <to uri="direct:getAll"/>
            </get>
            <get uri="rating/{rate}">
                <description> Resturant Info by rating</description>
                <to uri="direct:getRating"/>
            </get>
        </rest>
        <route id="all-route">
            <from id="_direct1" uri="direct:getAll"/>
            <to id="_to1" uri="sql:select * from RESTURANT?dataSource=dataSource"/>
            <marshal> 
            	<json library="Gson" /> 
            </marshal>
            <log message="${body}" />
        </route>
        <route id="ratinf-route">
            <from id="_direct2" uri="direct:getRating"/>
            <to id="_to2" uri="sql:select * from RESTURANT where rating > :#rate ?dataSource=dataSource"/>
            <marshal> 
            	<json library="Gson" /> 
            </marshal>
            <log message="${body}" />
        </route>
    </camelContext>
</beans>
